# Vocabulary Service Configuration
NODE_ENV=production
PORT=50057

# Database Configuration (Vocabulary Service Database)
DATABASE_URL="postgresql://puchi_user:123456@localhost:5438/puchi_vocabulary_db"
DB_HOST=localhost
DB_PORT=5432
DB_NAME=puchi_vocabulary_db
DB_USER=puchi_user
DB_PASSWORD=123456

# gRPC Configuration
GRPC_PORT=50057
GRPC_HOST=0.0.0.0

# Kafka Configuration
KAFKA_BROKERS=kafka:29092
KAFKA_TOPIC_VOCABULARY_EVENTS=vocabulary-events

# Service-specific configurations
SERVICE_NAME=vocabulary-service

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Health Check
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30000

# Vocabulary Configuration
VOCABULARY_REVIEW_INTERVAL=86400000
SPACED_REPETITION_ENABLED=true
MAX_VOCABULARY_PER_DAY=50

# Progress Service Integration
PROGRESS_SERVICE_GRPC_URL=localhost:50053 