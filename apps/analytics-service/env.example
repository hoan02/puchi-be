# Analytics Service Configuration
NODE_ENV=production
PORT=50058

# Database Configuration (Analytics Service Database - MongoDB)
DATABASE_URL="mongodb://puchi_user:123456@localhost:27017/puchi_analytics_db"

# gRPC Configuration
GRPC_PORT=50058
GRPC_HOST=0.0.0.0

# Kafka Configuration
KAFKA_BROKERS=kafka:29092
KAFKA_TOPIC_ANALYTICS_EVENTS=analytics-events

# Service-specific configurations
SERVICE_NAME=analytics-service

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Health Check
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30000

# Analytics Configuration
ANALYTICS_BATCH_SIZE=1000
ANALYTICS_PROCESSING_INTERVAL=60000
DATA_RETENTION_DAYS=365

# Redis Configuration (cho caching analytics data)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Export Configuration
EXPORT_FORMAT=json
EXPORT_PATH=/app/exports 