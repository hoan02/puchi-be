# Media Service Configuration
NODE_ENV=production
PORT=50055

# Database Configuration (Media Service Database - MongoDB)
DATABASE_URL="mongodb://puchi_user:123456@localhost:27018/puchi_media_db"

# gRPC Configuration
GRPC_PORT=50055
GRPC_HOST=0.0.0.0

# Kafka Configuration
KAFKA_BROKERS=kafka:29092
KAFKA_TOPIC_MEDIA_EVENTS=media-events

# Service-specific configurations
SERVICE_NAME=media-service

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Health Check
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30000

# File Storage Configuration
STORAGE_PATH=/app/uploads
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,video/webm,audio/mp3,audio/wav

# AWS S3 Configuration (nếu sử dụng cloud storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=puchi-media-bucket

# Image Processing
IMAGE_QUALITY=80
THUMBNAIL_SIZE=300 