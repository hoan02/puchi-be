# API Gateway Configuration
NODE_ENV=production
PORT=8000

# Database Configuration (API Gateway không cần database riêng)
DB_USER=puchi_user
DB_PASSWORD=123456

# gRPC Service URLs (Local development)
USER_SERVICE_GRPC_URL=localhost:50051
LESSON_SERVICE_GRPC_URL=localhost:50052
PROGRESS_SERVICE_GRPC_URL=localhost:50053
NOTIFICATION_SERVICE_GRPC_URL=localhost:50054
MEDIA_SERVICE_GRPC_URL=localhost:50055
QUIZ_SERVICE_GRPC_URL=localhost:50056
VOCABULARY_SERVICE_GRPC_URL=localhost:50057
ANALYTICS_SERVICE_GRPC_URL=localhost:50058

# Kafka Configuration
KAFKA_BROKERS=kafka:29092

# Service-specific configurations
SERVICE_NAME=api-gateway

# CORS Configuration
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Health Check
HEALTH_CHECK_PATH=/api/health
HEALTH_CHECK_INTERVAL=30000 