# Progress Service Configuration
NODE_ENV=production
PORT=50053

# Database Configuration (Progress Service Database)
DATABASE_URL="postgresql://puchi_user:123456@localhost:5434/puchi_progress_db"
DB_HOST=localhost
DB_PORT=5432
DB_NAME=puchi_progress_db
DB_USER=puchi_user
DB_PASSWORD=123456

# gRPC Configuration
GRPC_PORT=50053
GRPC_HOST=0.0.0.0

# Kafka Configuration
KAFKA_BROKERS=kafka:9092
KAFKA_TOPIC_PROGRESS_EVENTS=progress-events

# Service-specific configurations
SERVICE_NAME=progress-service

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Health Check
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30000

# Analytics Service Integration
ANALYTICS_SERVICE_GRPC_URL=localhost:50058

# Progress Tracking Configuration
PROGRESS_UPDATE_INTERVAL=30000
PROGRESS_BATCH_SIZE=100 