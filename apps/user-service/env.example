# User Service Configuration
NODE_ENV=production
PORT=50051

# Database Configuration (User Service Database)
DATABASE_URL="postgresql://puchi_user:123456@localhost:5432/puchi_user_db"
DB_HOST=localhost
DB_PORT=5432
DB_NAME=puchi_user_db
DB_USER=puchi_user
DB_PASSWORD=123456

# gRPC Configuration
GRPC_PORT=50051
GRPC_HOST=0.0.0.0

# Kafka Configuration
KAFKA_BROKERS=kafka:29092
KAFKA_TOPIC_USER_EVENTS=user-events

# Service-specific configurations
SERVICE_NAME=user-service

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Health Check
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30000