# Lesson Service Configuration
NODE_ENV=production
PORT=50052

# Database Configuration (Lesson Service Database)
DATABASE_URL="postgresql://puchi_user:123456@localhost:5433/puchi_lesson_db"
DB_HOST=localhost
DB_PORT=5432
DB_NAME=puchi_lesson_db
DB_USER=puchi_user
DB_PASSWORD=123456

# gRPC Configuration
GRPC_PORT=50052
GRPC_HOST=0.0.0.0

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_LESSON_EVENTS=lesson-events

# Service-specific configurations
SERVICE_NAME=lesson-service

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Health Check
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30000

# Media Service Integration
MEDIA_SERVICE_GRPC_URL=localhost:50055

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,video/webm 