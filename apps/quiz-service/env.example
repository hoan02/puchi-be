# Quiz Service Configuration
NODE_ENV=production
PORT=50056

# Database Configuration (Quiz Service Database - MongoDB)
DATABASE_URL="mongodb://puchi_user:123456@localhost:27019/puchi_quiz_db"

# gRPC Configuration
GRPC_PORT=50056
GRPC_HOST=0.0.0.0

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_QUIZ_EVENTS=quiz-events

# Service-specific configurations
SERVICE_NAME=quiz-service

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Health Check
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30000

# Quiz Configuration
QUIZ_TIME_LIMIT=300
MAX_ATTEMPTS=3
PASSING_SCORE=70

# Progress Service Integration
PROGRESS_SERVICE_GRPC_URL=localhost:50053 